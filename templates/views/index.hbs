<!DOCTYPE html>
<html lang="en">
<head>
    {{>links}}
</head>
<body>
  <!--Main menu starts here-->
    {{>navbar}}
    <!--Main header starts here-->
    <div class="container-fluid main_header">
      <div class="row">
          <div class="col-md-10 col-12 mx-auto">
            <div class="row">
              <!-- left side div -->
              <div class="col-md-6 col-12 main_header_left">
                <p>Welcome to Express Weather app</p>
                <h1>Get the Latest <span class="text_clr">Weather</span> Info of your City!</h1>
                <a href="/weather"><button>Check Now</button></a>
              </div>
              <!-- right side div -->
              <div class="col-md-6 col-12 main_header_right">
                <!-- bootstrap carousel -->
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                  <div class="carousel-inner">
                    <div class="carousel-item active">
                      <img class="w-100" src="/images/bg1.svg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                      <img class="w-100" src="/images/bg2.svg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                      <img class="w-100" src="/images/bg3.svg" alt="Third slide">
                    </div>
                    <div class="carousel-item">
                      <img class="w-100" src="/images/bg4.svg" alt="Third slide">
                    </div>
                  </div>
                  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                  </a>
                </div>
              </div>
            </div>
          </div>
      </div>
    </div>
    <!-- footer -->
    {{>footer}}
</body>
</html>